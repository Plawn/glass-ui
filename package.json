{
  "name": "glass-ui-solid",
  "version": "0.3.5",
  "description": "iOS 26-inspired glassmorphism UI components for SolidJS",
  "author": "plawn",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Plawn/glass-ui.git"
  },
  "homepage": "https://github.com/Plawn/glass-ui#readme",
  "bugs": {
    "url": "https://github.com/Plawn/glass-ui/issues"
  },
  "keywords": [
    "solidjs",
    "solid",
    "ui",
    "components",
    "glassmorphism",
    "ios",
    "design-system",
    "tailwindcss",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": ["./dist/styles.css", "./src/styles/*.css"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./theme.css": "./src/styles/theme.css"
  },
  "files": ["dist", "src/styles/theme.css", "README.md"],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe .",
    "prepublishOnly": "bun run build",
    "publish:npm": "bun run build && npm publish",
    "demo": "cd demo && bun install && bun run dev",
    "demo:build": "cd demo && bun install && bun run build",
    "demo:preview": "cd demo && bun install && bun run build && bun run preview",
    "prepare": "husky"
  },
  "peerDependencies": {
    "solid-js": "^1.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/dompurify": "^3.2.0",
    "@types/prismjs": "^1.26.5",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.7.2",
    "vite": "^7",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-solid": "^2.11.10"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json}": [
      "biome check --no-errors-on-unmatched  --fix --unsafe"
    ]
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "dompurify": "^3.2.6",
    "marked": "^15.0.7",
    "prismjs": "^1.30.0"
  }
}
