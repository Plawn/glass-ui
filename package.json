{
  "name": "glass-ui-solid",
  "version": "0.1.0",
  "description": "iOS 26-inspired glassmorphism UI components for SolidJS",
  "author": "plawn",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plawn/wti.git",
    "directory": "packages/glass-ui"
  },
  "homepage": "https://github.com/plawn/wti/tree/main/packages/glass-ui#readme",
  "bugs": {
    "url": "https://github.com/plawn/wti/issues"
  },
  "keywords": [
    "solidjs",
    "solid",
    "ui",
    "components",
    "glassmorphism",
    "ios",
    "design-system",
    "tailwindcss",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": ["**/*.css"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./dist/index.css",
    "./theme.css": "./src/styles/theme.css"
  },
  "files": ["dist", "src/styles/theme.css", "README.md"],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build",
    "publish:npm": "bun run build && npm publish"
  },
  "peerDependencies": {
    "solid-js": "^1.8.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.8",
    "@types/dompurify": "^3.2.0",
    "@types/prismjs": "^1.26.5",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.7.2",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-solid": "^2.11.6"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "dompurify": "^3.2.6",
    "marked": "^15.0.7",
    "prismjs": "^1.30.0"
  }
}
